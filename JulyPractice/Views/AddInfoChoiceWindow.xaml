<Window x:Class="JulyPractice.AddInfoChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JulyPractice"
        mc:Ignorable="d"
        Title="Добавить информацию" Height="200" Width="300">
    <Window.Resources>
        <local:RadioButtonConverter x:Key="RadioButtonConverter"/>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
        <RadioButton Content="Добавить артиста" IsChecked="{Binding SelectedInfoType, Converter={StaticResource RadioButtonConverter}, ConverterParameter=Добавить артиста}"/>
        <RadioButton Content="Добавить альбом" IsChecked="{Binding SelectedInfoType, Converter={StaticResource RadioButtonConverter}, ConverterParameter=Добавить альбом}"/>
        <RadioButton Content="Добавить песню" IsChecked="{Binding SelectedInfoType, Converter={StaticResource RadioButtonConverter}, ConverterParameter=Добавить песню}"/>
        <Button Content="Подтвердить" Margin="10" Width="90" Command="{Binding AcceptInfoCommand}" CommandParameter="{Binding SelectedInfoType}"/>
    </StackPanel>
</Window>
